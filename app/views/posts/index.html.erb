<h1 style="font-family:Courier New">Listing posts</h1>


<table>
  <tr>
    <th>Title</th>
    <th>Text</th>
    <th></th>
    <th></th>
  </tr>

<% @post.each do |post| %>
  <tr>
    <td id="index_post_title"><%= post.title %></td>
    <td id="index_post_text"><%= post.text %></td>
    <td><%= link_to 'Show', post %></td>
    <td><%= link_to 'Edit', edit_post_path(@post) %></td>
    <td><%= link_to 'Destroy', post_path(@post),
            method: :delete, data: { confirm: 'Are you sure?'} %></td>
  </tr>
<% end %>
</table>
<%= link_to 'New', new_post_path %>